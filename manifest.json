{
  "manifest_version": 2,
  "name": "Tab Limiter",
  "version": "1.0",
  "description": "Limits tabs while allowing a single temporary tab",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tab-limiter@holdenlucas.com",
      "strict_min_version": "122.0"
    }
  }
}
